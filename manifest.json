{
    "manifest_version": 3,
    "name": "Web2Markdown Clipper",
    "version": "1.0.0",
    "description": "Clips websites to Markdown",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "downloads",
        "contextMenus",
        "clipboardWrite"
    ],
    "action": {
        "default_title": "Clip to Markdown",
        "default_popup": "popup/index.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "libs/Readability.js",
                "libs/turndown.js",
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}